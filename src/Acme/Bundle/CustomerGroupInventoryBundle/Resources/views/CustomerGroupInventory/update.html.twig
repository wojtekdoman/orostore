{% extends '@OroUI/actions/update.html.twig' %}
{% import '@OroUI/macros.html.twig' as UI %}

{% if entity.id %}
    {% set formAction = path('acme_cg_inventory_update', {'id': entity.id}) %}
{% else %}
    {% set formAction = path('acme_cg_inventory_create') %}
{% endif %}

{% block navButtons %}
    {% if entity.id and is_granted('DELETE', entity) %}
        {{ UI.deleteButton({
            'dataUrl': path('acme_cg_inventory_delete', {'id': entity.id}),
            'dataRedirect': path('acme_cg_inventory_index'),
            'aCss': 'no-hash remove-button',
            'dataId': entity.id,
            'entity_label': 'acme.cginventory.entity_label'|trans
        }) }}
        {{ UI.buttonSeparator() }}
    {% endif %}
    {{ UI.cancelButton(path('acme_cg_inventory_index')) }}
    {% set html = UI.saveAndCloseButton({
        'route': 'acme_cg_inventory_index'
    }) %}
    {% if is_granted('acme_cg_inventory_create') %}
        {% set html = html ~ UI.saveAndNewButton({
            'route': 'acme_cg_inventory_create'
        }) %}
    {% endif %}
    {% if entity.id or is_granted('acme_cg_inventory_edit') %}
        {% set html = html ~ UI.saveAndStayButton({
            'route': 'acme_cg_inventory_update',
            'params': {'id': '$id'}
        }) %}
    {% endif %}
    {{ UI.dropdownSaveButton({'html': html}) }}
{% endblock navButtons %}

{% block pageHeader %}
    {% if entity.id %}
        {% set breadcrumbs = {
            'entity': entity,
            'indexPath': path('acme_cg_inventory_index'),
            'indexLabel': 'acme.cginventory.entity_plural_label'|trans,
            'entityTitle': entity.id
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'acme.cginventory.entity_label'|trans}) %}
        {% include '@OroUI/page_title_block.html.twig' with {title: title} %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'cg-inventory-edit' %}

    {% set dataBlocks = [{
        'title': 'acme.cginventory.sections.general'|trans,
        'subblocks': [
            {
                'title': '',
                'data': [
                    form_row(form.product),
                    form_row(form.customerGroup),
                    form_row(form.website),
                    form_row(form.quantity),
                    form_row(form.inventoryStatus),
                    form_row(form.isActive)
                ]
            }
        ]
    }] %}

    {% set data = {
        'formErrors': form_errors(form),
        'dataBlocks': dataBlocks
    } %}

    {{ parent() }}
{% endblock content_data %}