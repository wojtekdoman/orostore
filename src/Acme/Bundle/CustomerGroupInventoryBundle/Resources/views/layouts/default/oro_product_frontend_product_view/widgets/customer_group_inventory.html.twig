{% block _acme_cg_inventory_status_label_widget %}
    {% set inventory = block.vars.inventory|default(null) %}
    {% if inventory %}
        {% if inventory.status == 'in_stock' %}
            <span class="badge badge--success">In Stock</span>
        {% elseif inventory.status == 'out_of_stock' %}
            <span class="badge badge--danger">Out of Stock</span>
        {% elseif inventory.status == 'backorder' %}
            <span class="badge badge--warning">Backorder</span>
        {% elseif inventory.status == 'pre_order' %}
            <span class="badge badge--info">Pre-order</span>
        {% else %}
            <span class="badge">{{ inventory.status|replace({'_': ' '})|title }}</span>
        {% endif %}
    {% endif %}
{% endblock %}